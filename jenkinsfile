pipeline {
    agent any

    environment {
        PROJECT_NAME = 'project-serverless-and-cloud-architectures'
        SERVICES = 'frontend user-service recipe-service rating-service favorite-service api-gateway reverse-proxy'
    }

    stages {
        stage('Clean Containers') {
            steps {
                echo 'üßπ Stopping and removing containers...'
                sh '''
                    set -ex
                    docker compose --project-name $PROJECT_NAME down || true
                '''
            }
        }

        stage('Build Frontend and Services') {
            steps {
                echo 'üî® Building Docker images...'
                sh '''
                    set -ex
                    docker compose --project-name $PROJECT_NAME build $SERVICES
                '''
            }
        }

        stage('Start Containers') {
            steps {
                echo 'üöÄ Starting containers...'
                sh '''
                    set -ex
                    docker compose --project-name $PROJECT_NAME up -d $SERVICES
                    echo "üïí Waiting for containers to initialize..."
                    sleep 10
                    docker compose --project-name $PROJECT_NAME ps
                    echo "üìã Showing last 100 lines of logs from all services..."
                    docker compose --project-name $PROJECT_NAME logs --tail=100
                '''
            }
        }

        stage('Check Status') {
            steps {
                echo 'üì¶ Listing running containers...'
                sh '''
                    set -ex
                    docker ps
                '''
            }
        }
    }

    post {
        failure {
            echo '‚ùå Build failed. Cleaning up containers...'
            sh '''
                set -ex
                docker compose --project-name $PROJECT_NAME down || true
            '''
        }
    }
}
